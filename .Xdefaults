# --[ Xft Settings ]--


# Quality settings.
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

# --[ urxvt Settings ]--

# Set transparency.
URxvt*transparent: false

# Shading (0-99=>darken; 101-200=>lighten).
URxvt*shading: 00

# How many lines to save.
URxvt*saveLines: 1200

# Blur and Tint
urxvt*tintColor: #000000
urxvt*blurRadius: 0

# Foreground/background colors. (Transparency seems to negate the background color?)
#URxvt*foreground: #98c279
#URxvt.background: #060a12
# Source Code Pro font.
URxvt*font: xft:Monospace:pixelsize=14:antialias=true:hinting=true
URxvt*boldFont: xft:Monospace:bold:pixelsize=14:antialias=true:hinting=true

# Disable scrollbar.
URxvt*scrollBar: false

# Fix Vim Keys
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

# Border
URxvt.internalBorder:  10

# Color settings

*fading: 10
*fadeColor: #000000
*cursorColor: #22ff22
*pointerColorBackground: #586e75
*pointerColorForeground: #bbbbff

! special
*.foreground:   #97ffd6
*.background:   #0d0912
*.cursorColor:  #dd97ff

