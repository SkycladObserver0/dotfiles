
# --[ Xft Settings ]--

# Quality settings.
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

# --[ urxvt Settings ]--

# Set transparency.
URxvt*transparent: true

# Shading (0-99=>darken; 101-200=>lighten).
URxvt*shading: 30

# How many lines to save.
URxvt*saveLines: 1200

# Foreground/background colors. (Transparency seems to negate the background color)
URxvt*foreground: #00ff00
URxvt*background: #000000

# Source Code Pro font.
URxvt*font: xft:Source Code Pro:pixelsize=14:antialias=true:hinting=true
URxvt*boldFont: xft:Source Code Pro:bold:pixelsize=14:antialias=true:hinting=true

# Disable scrollbar.
URxvt*scrollBar: false

# Fix Vim Keys
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C


# Color settings 


